<script type="text/javascript" charset="utf-8">

    $('document').ready(function() {
        const temporada = new URL(location.href).searchParams.get('t');

        if(temporada) {

            const accordion = document.querySelector(`h4[data-temporada-id="${temporada}"]`)

            let panel = accordion.nextElementSibling;
            let chevron = accordion.querySelector('span');
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
                chevron.classList.remove('fa-rotate-90')
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
                chevron.classList.add('fa-rotate-90')
            }
        }
    });
</script>

