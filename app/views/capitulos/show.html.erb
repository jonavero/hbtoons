        <div class="contenedor-episondios">
          <div class="">
            <h3 class="subtitulo-linea">Episodios</h3>
            <h4 class="estilo-temporada-activo estilo-temporada"><span class="fa fa-play"></span>Temporada</h4>
            <% @Episodios.each do |e| %>
              <ul class="listas-de-episodion">
                <li>
                  <%= link_to capitulo_path(e) do %>
                    <span>Capitulo <%= e.Episodio %>-</span> <%= e.Titulo %>
                  <% end %>
                </li>

              </ul>
            <% end %>
            <div class="paginacion">
              <ul class=" pagination">
                <li>      <%= will_paginate @Episodios, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %></li>

              </ul>
            </div>
          </div>
        </div>

        <div class="comentario-serie">
          <div class="contenedor-formulario-comentario">
            <h3 class="subtitulo-linea">Escribenos un comentario</h3>
            <%= form_for @Comentario, url: new_cometario_path(@Comentario) do |f| %>
              <% if @Comentario.errors.any? %>
                <div id="errorExplanation">
                  <ul>
                    <% @Comentario.errors.full_messages.each do |msg| %>
                      <li class="alert alert-danger" role="alert"><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="">
                <div class="">
                  <%= f.text_field :Nombre, id: 'nombre', class: "form-control", placeholder: "Nombre" %>
                  <span class="error"></span>
                </div>
                <div class="">
                  <%= f.text_field :Correo, id: 'correo', class: "form-control", placeholder: "Correo" %>
                  <span class="error"></span>
                </div>
              </div>
              <div class="">
                <%= f.text_area :Comentario, id: 'comentario', :rows => "8", :cols => "80", class: "form-control", placeholder: "Mensaje" %>
                <span class="error"></span>
              </div>
              <%= f.hidden_field :Capitulo_id, :value => @Capitulo.id, :readonly => "" %>
              <div class="div-boton-publicar">
                <input type="submit" id="publicar" class="btn btn-enviar" name="button" value="Publicar">
              </div>
            <% end %>
          </div>
          <div class="contenedor-comentarios">
            <div class="">
              <p><span>(<%= @Count %>)</span> Comentarios </p>
            </div>

            <div class="comentarios-escritos">
              <% @Comentarios.each do |c| %>
                <div class="informacion-persona">
                  <div class="comentario-por-persona">
                    <div class="imagen-persona">
                      <img src="img/persona.jpg" alt="">
                      <p><%= c.Nombre %><span class="fecha-publicacion"><%= c.created_at.strftime("%d/%B/%Y") %></span>
                      </p>
                    </div>
                    <div class="comentario-persona">
                      <p><%= c.Comentario %></p>
                    </div>


                  </div>
                </div>
              <% end %>
            </div>

          </div>
        </div>
